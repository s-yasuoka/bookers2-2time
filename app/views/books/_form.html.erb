<%= form_with model:@book_new do |f| %>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "create book", class:"btn btn-success" %>
  </div>
<% end %>