<div class="container">
  <div class="row">
    <div class="mx-auto">
       <!--エラーメッセージ-->
    <div class="text-danger">
      <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>


    </div>
      <h1>User info</h1>
      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <h4>Name</h4>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>Image</h4>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        <div class="form-group">
          <h4>Introduction</h4>
          <%= f.text_field :introduction, class:"form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>